<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.image.ImageView?>

<?import javafx.scene.image.Image?>
<StackPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.projectpacks.javaproject.NewScene" alignment="CENTER"
            prefHeight="400.0" prefWidth="600.0" >
<VBox spacing="10" alignment="CENTER">
    <Label fx:id="info" text="Jutro" style="-fx-font-size: 20px;" />


    <HBox spacing="20" alignment="CENTER" style="-fx-background-color: #868784;">
        <ImageView fitHeight="100" fitWidth="100" fx:id="icon">
        </ImageView>
        <VBox spacing="5">
            <Label fx:id="temp" style="-fx-font-size: 40px;" />
            <Label fx:id="feelsLike" style="-fx-font-size: 14px;" />
        </VBox>
    </HBox>

    <Label fx:id="weatherName" style="-fx-font-size: 16px;" />

    <GridPane hgap="10" vgap="5" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" />
            <ColumnConstraints halignment="LEFT" />
        </columnConstraints>
        <rowConstraints>
            <RowConstraints valignment="CENTER" />
        </rowConstraints>

        <Label text="Wind:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Label fx:id="wind" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Porywy:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <Label text="7 km/h" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Chmury:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <Label text="50-60% nieba" GridPane.columnIndex="1" GridPane.rowIndex="2" />

        <Label text="Opady:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <Label text="0 mm / 12h" GridPane.columnIndex="1" GridPane.rowIndex="3" />

        <Label text="Ciśnienie:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <Label text="1027 hPa" GridPane.columnIndex="1" GridPane.rowIndex="4" />

        <Label text="Wilgotność:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <Label text="85%" GridPane.columnIndex="1" GridPane.rowIndex="5" />

        <Label text="Termika:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <Label text="zimno i sucho" GridPane.columnIndex="1" GridPane.rowIndex="6" />

        <Label text="Biomet:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
        <Label text="korzystny" style="-fx-text-fill: green;" GridPane.columnIndex="1" GridPane.rowIndex="7" />
    </GridPane>
</VBox>
</StackPane>


